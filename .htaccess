<IfModule mod_headers.c>
    <FilesMatch "\.(gif|ico|jpeg|jpg|png|css|js)$">
        Header set Cache-Control "max-age=604800, public, must-revalidate"
    </FilesMatch>
    <FilesMatch "\.(html)$">
        Header set Cache-Control "max-age=43200, public"
    </FilesMatch>
</IfModule>

